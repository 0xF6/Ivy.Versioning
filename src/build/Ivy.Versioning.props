<?xml version="1.0" encoding="utf-8"?>
<Project TreatAsLocalProperty="TaskFolder">

  <PropertyGroup>
    <IvyAssemblyFile Condition="'$(MSBuildRuntimeType)' != 'Core'">$(MSBuildThisFileDirectory)..\tools\net472\Ivy.Versioning.dll</IvyAssemblyFile>
    <IvyAssemblyFile Condition="'$(MSBuildRuntimeType)' == 'Core'">$(MSBuildThisFileDirectory)..\tools\netstandard2.0\Ivy.Versioning.dll</IvyAssemblyFile>
  </PropertyGroup>

  <UsingTask AssemblyFile="$(IvyAssemblyFile)" TaskName="Ivy.Versioning.BumpVersion" />

  <PropertyGroup>
    <MSBumpLockFilePath>$(MSBuildProjectDirectory)\$(MSBuildProjectName).msbump.lock</MSBumpLockFilePath>
  </PropertyGroup>

</Project>