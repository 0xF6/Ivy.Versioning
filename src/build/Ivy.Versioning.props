<?xml version="1.0" encoding="utf-8"?>
<Project TreatAsLocalProperty="TaskFolder">

  <PropertyGroup>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' == 'Core' ">netstandard2.0</TaskFolder>
    <TaskFolder Condition=" '$(MSBuildRuntimeType)' != 'Core' ">net48</TaskFolder>
    <IvyRoot>$(MSBuildThisFileDirectory)..\tasks\$(TaskFolder)</IvyRoot>
  </PropertyGroup>

  <UsingTask AssemblyFile="$(IvyRoot)\Ivy.Versioning.dll" TaskName="Ivy.Versioning.BumpVersion" />

  <PropertyGroup>
    <MSBumpLockFilePath>$(MSBuildProjectDirectory)\$(MSBuildProjectName).msbump.lock</MSBumpLockFilePath>
  </PropertyGroup>

</Project>